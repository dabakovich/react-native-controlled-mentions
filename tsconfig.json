{
  "compilerOptions": {
    "target": "es6",

    "module": "commonjs",

    "lib": [
      "es7"
    ],

    "declaration": true,

    "outDir": "./dist",

    "sourceMap": true,

    "strict": true,

    "skipLibCheck": true,

    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,

    "typeRoots": [
      "node_modules/@types"
    ],

    "jsx": "react"
  },

  "include": [
    "./src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
